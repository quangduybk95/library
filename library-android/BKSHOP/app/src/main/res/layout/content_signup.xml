<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Nhập thông tin cá nhân"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="left|center_vertical"
                android:text="Email"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/userEmail"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="2"
                android:ems="10"
                android:gravity="left|center_vertical"
                android:hint="Email"
                android:textSize="15sp"
                android:inputType="textEmailAddress">

            </EditText>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="left|center_vertical"
                android:text="Mật khẩu"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/userPass1"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="2"
                android:ems="10"
                android:gravity="left|center_vertical"
                android:textSize="15sp"
                android:hint="Mật khẩu"
                android:inputType="textPassword" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="left|center_vertical"
                android:text="Mật khẩu"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/userPass2"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="2"
                android:ems="10"
                android:gravity="left|center_vertical"
                android:textSize="15sp"
                android:hint="Đánh lại mật khẩu"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="left|center_vertical"
                android:text="Tên"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/userFullName"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="2"
                android:gravity="left|center_vertical"
                android:ems="10"
                android:textSize="15sp"
                android:hint="Tên đầy đủ" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="left|center_vertical"
                android:text="Địa chỉ"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/userAddress"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="2"
                android:ems="10"
                android:gravity="left|center_vertical"
                android:textSize="15sp"
                android:hint="Địa chỉ" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="left|center_vertical"
                android:text="Số điện thoại"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/userPhone"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:ems="10"
                android:textSize="15sp"
                android:gravity="left|center_vertical"
                android:layout_weight="2"
                android:hint="Số điện thoại"
                android:inputType="numberDecimal" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="Mã bảo vệ"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/showCapcha"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:ems="10"
                android:layout_marginRight="5dp"
                android:background="@drawable/black"
                android:gravity="center"
                android:text="111111"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="3"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="left|center_vertical"
                android:text="Mời bạn nhập mã"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/hitCapcha"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:ems="10"
                android:gravity="left|center_vertical"
                android:inputType="text"
                android:textSize="15sp" />

        </LinearLayout>

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Đăng kí" />
    </LinearLayout>
</ScrollView>